<script>
    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer1", {
            animationEnabled: true,
            theme: "light2", // "light1", "light2", "dark1", "dark2"
            title: {
                text: "AoNs Granted - Categorization wise"
            },
            axisY: {
                title: "Value of AoNs(in Rs Crs)"
            },
            data: [{
                click: function (e) {
                    var stage = e.dataPoint.label;
                    var service = "";
                    var Categorisation = "";
                    window.location.href = "/RReport?stage=" + stage + "&Service_Lead_Service=" + service + "&Categorisation=" + Categorisation;

                },
                type: "column",
                indexLabel: "{z} AoN Categorization",
                //indexLabel: "{y:10}",
                dataPoints: @Html.Raw(ViewBag.dataPoints)
	}]
        });
        chart.render();
        function explodePie(e) {
            if (typeof (e.dataSeries.dataPoints[e.dataPointIndex].exploded) === "undefined" || !e.dataSeries.dataPoints[e.dataPointIndex].exploded) {
                e.dataSeries.dataPoints[e.dataPointIndex].exploded = true;
            } else {
                e.dataSeries.dataPoints[e.dataPointIndex].exploded = false;
            }
            e.chart.render();
        }
        function onClick(e) {
            //alert(e.dataSeries.type + ", dataPoint { x:" + e.dataPoint.indexLabel + ", y: " + e.dataPoint.label + " }");
            var stage = e.dataPoint.label;
            var service = "";
            var Categorisation = "";
            window.location.href = "/RReport?stage=" + stage + "&Service_Lead_Service=" + service + "&Categorisation=" + Categorisation;
        }
    }
</script>


