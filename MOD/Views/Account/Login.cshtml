@model  MOD.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    @*<meta http-equiv="Content-Security-Policy" content="default-src https:">*@
    <link rel="icon" href="~/assets/media/images/ddp_logo.png" type="image/gif" sizes="16x16">

    <title>MOD</title>

    <!-- CSS -->
    <link href="~/assets/css/bootstrapv4.css" rel="stylesheet" />
    <link href="~/assets/dashbordfont/css/all.min.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <script src="~/assets/js/dashbordjs.js"></script>
    <style>
        form {
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="navbar-custom topnav-navbar topnav-navbar-dark" style="height: 95px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-3">
                    <a href="" class="topnav-logo mt-2">
                        <span class="topnav-logo-sm">
                            <img src="~/assets/media/images/ddp_logo.png" alt="" height="65">
                        </span>
                    </a>
                </div>

                <div class="col-6 d-flex justify-content-center align-items-center">
                    <h1 class="mt-3 topHeadline">MoD (ACQUISITION) DASHBOARD</h1>
                </div>

                <div class="col-3">
                    
                </div>
            </div>
        </div>
    </div>

    <div class="login_bg">
        
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="account-pages mt-5 mb-5">
                <div class="container">
                    <div class="alert alert-danger alert-dismissible text-center bg-danger text-white border-0 fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        @TempData["Message"]
                    </div>
                    <div class="row justify-content-center">

                        <div class="col-lg-6">
                            <div class="card">
                                <!-- Logo-->
                                <div class="card-header pt-4 pb-4 text-center bg-primary">
                                    <h2 class="text-light m-0"> Login <i class="fas fa-sign-in-alt"></i> </h2>
                                </div>

                                <div class="card-body p-4">
                                    <form action="#" autocomplete="off">
                                        <div class="form-group" data-validate="Valid email is required: ex@abc.xyz">
                                            <label for="emailaddress">Email address</label>
                                            @*<input class="form-control" type="text" name="InternalEmailID" required="" placeholder="Enter your email">*@
                                            <input class="form-control" type="text" type="text" name="InternalEmailID" placeholder="Email">
                                            @Html.ValidationMessageFor(x => x.InternalEmailID, null, new { @class = "danger" })
                                        </div>

                                        <div class="form-group wrap-input100 rs1 validate-input" data-validate="Password is required">
                                            <label for="password">Password</label>
                                            <div class="input-group input-group-merge">
                                                @*<input type="password" id="Password" class="form-control input100" placeholder="Enter your password">*@
                                                <input class="form-control input100" type="password" name="Password" placeholder="Password">
                                                <div class="input-group-append" data-password="false">
                                                    <div class="input-group-text">
                                                        <span class="password-eye"><i class="fas fa-eye"></i></span>
                                                    </div>
                                                </div>
                                                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "danger" })
                                            </div>
                                        </div>

                                        <div class="form-group mb-0 text-center container-login100-form-btn mt-4 m-t-20 ">
                                            <button class="btn btn-primary login100-form-btn" type="submit"> Login </button>
                                        </div>

                                        <div class="text-center mt-4 mb-2">
                                            <a href="#" class="text-muted font-16">Forget Password?</a>
                                        </div>
                                    </form>
                                </div> <!-- end card-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

    <div class="container-fluid footer">
        <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
                <p class="mb-0">
                    Website content managed by : MOD
                </p>
            </div>
        </div>
    </div>

    <script src="/assets/fontawesome-5.12.1/js/all.min.js"></script>

</body>
</html>












