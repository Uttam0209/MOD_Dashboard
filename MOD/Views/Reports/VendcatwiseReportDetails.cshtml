
@{
    ViewBag.Title = "VendcatwiseReportDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div class="tab-pane " id="tab-2" role="tabpanel">
        <div class="col-auto">
            <h2 class="mb-0">Vendor Category Report Details</h2>
        </div>


        <div class="table-responsive p-4">
            @if (ViewBag.CatDataCount = true)
            {
                <table id="example" class="table table-striped table-bordered" style="width:100%; overflow-y:scroll;">
                    <thead>
                        <tr>
                            <th rowspan="2"> Sn</th>
                            <th rowspan="2">Aon Description</th>
                            <th rowspan="2"> Categorisation</th>
                            <th rowspan="2"> Service Lead Service</th>
                            <th rowspan="2"> Stage</th>                            
                            <th colspan="3" style="text-align:center"> Cost(In INR Crs) </th>
                        </tr>
                        <tr>
                           
                            <th>Total Aon cost</th>
                            @*<th>Foreign OEM</th>*@
                            <th>Vendor Category</th>


                        </tr>
                    </thead>
                    <tbody>
                        @{ int count = 1;
                            foreach (var item in @ViewBag.CatDataDetails)
                            {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Aon_description</td>
                            <td>@item.Categorisation</td>
                            <td>@item.Service_Lead_Service</td>
                            <td>@item.Description</td>

                            <td>@item.total_aon_cost</td>
                            @*<td>@item.stage</td>*@
                            <td>@item.vendorcategory</td>


                        </tr>
                                count++;

                            }

                        }
                    </tbody>
                </table>
            }
            @*<div>
                    <h1> NO Data Found </h1>
                </div>*@
        </div>
    </div>
</form>

