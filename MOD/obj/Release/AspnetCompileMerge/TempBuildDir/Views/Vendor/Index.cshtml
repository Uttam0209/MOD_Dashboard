@model MOD.Models.VendorListViewModel
@{
    ViewBag.Title = "Index";
}

    <script>
        $(document).ready(function () {
            $("#dashboards").addClass("show");
            $("#vendor_master").addClass("active");
        });
    </script>

    <div class="card flex-fill w-100 p-4">
        <div class="row mb-2 mb-xl-3">
            <div class="col-auto d-none d-sm-block">
                <h2 class="mb-0">Vendor List</h2>
            </div>

            <div class="col-auto ml-auto text-right mt-n1">
                <a href="@Url.Action("Create","Vendor")" class="btn btn-primary float-right" type="button"><i class="fas fa-plus-square mr-1"></i>Create</a>
            </div>
        </div>

        @if (Model != null)
        {
            <div class="row">
                <div class="col col-12" style="overflow: auto;">
                    <table id="example" class="table table-striped table-bordered" style="width:100%;">
                        <thead>
                            <tr>
                                <th class="text-nowrap">SL. No.</th>
                                <th class="text-nowrap">Vendor Name</th>
                                <th class="text-nowrap">Vendor Category</th>
                                <th class="text-nowrap">Vendor Address</th>
                                <th>Contact Name</th>
                                <th class="text-nowrap">Phone_No</th>
                                <th class="text-nowrap">Email_ID</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int count = 1;}
                            @foreach (var vendor in Model.VendorList)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@vendor.VendorName</td>
                                    <td>@vendor.CategoryName</td>
                                    <td>@vendor.VendorAddress</td>
                                    <td>@vendor.VendorContactName</td>
                                    <td>@vendor.VendorPhone</td>
                                    <td>@vendor.VendorEmail</td>
                                    <td class="text-nowrap">
                                        <a href="@Url.Action("Edit","Vendor", new {ID = vendor.VendorId })" onclick="return confirm('Are you sure you want to Edit @vendor.VendorName?')" type="submit" class="btn-data btn btn-success"><i class="fas fa-edit mr-1"></i>Edit</a>
                                        <a href="@Url.Action("Delete","Vendor", new {ID = vendor.VendorId })" onclick="return confirm('Are you sure you want to delete?')" type="submit" class="btn-data btn btn-danger"><i class="fas fa-trash mr-1"></i>Delete</a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Records Not Found.
            </div>
        }
    </div>


        <script>
            $(document).ready(function () {
                $('#example').DataTable();

            });
        </script>
