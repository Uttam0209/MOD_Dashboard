
@{
    ViewBag.Title = "ReportOnClick";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style type="text/css">
        .Table {
            display: table;
        }

        .Title {
            display: table-caption;
            text-align: center;
            font-weight: bold;
            font-size: larger;
        }

        .Heading {
            display: table-row;
            font-weight: bold;
            text-align: center;
        }

        .Row {
            display: table-row;
        }

        .Cell {
            display: table-cell;
            border: solid;
            border-width: thin;
            padding-left: 5px;
            padding-right: 5px;
        }
    </style>
    <style>
        .danger {
            color: red;
        }

        .labeltext {
            font-family: Georgia, 'Times New Roman', Times, serif
        }

        .labeltext {
            font-family: Georgia, 'Times New Roman', Times, serif
        }

        .labeltext {
            font-family: Georgia, 'Times New Roman', Times, serif
        }

        .form-inline {
            display: block;
            width: 100%
        }

        .dataTables_length {
            float: left;
        }

        .dataTables_filter {
            float: right;
        }

        .border-right {
            border-right: 1px solid #dee2e6 !important;
            font-size: 16px;
        }

        @@font-face {
            font-family: 'Glyphicons Halflings';
            src: url('../fonts/glyphicons-halflings-regular.eot');
            src: url('../fonts/glyphicons-halflings-regular.eot?#iefix') format('embedded-opentype'), url('../fonts/glyphicons-halflings-regular.woff') format('woff'), url('../fonts/glyphicons-halflings-regular.ttf') format('truetype'), url('../fonts/glyphicons-halflings-regular.svg#glyphicons-halflingsregular') format('svg');
        }

        /*sidebar css statrt*/
        #sidebar-wrapper .list-group {
            width: auto;
        }

        #sidebar-wrapper .sidebar-heading {
            padding: 0.875rem 1.25rem;
            font-size: 1.2rem;
        }

        #sidebar-wrapper {
            width: 284px;
        }

            #sidebar-wrapper .sidebar-heading {
                padding: 1.875rem 1.25rem;
                font-size: 2rem;
            }
    </style>
    @*Prevent Right Click Script*@
    <script>
        document.addEventListener('contextmenu', event => event.preventDefault());
    </script>
</head>
<div class="row">
    <div class="col-md-12">
        <h3 class="well text-capitalize p-3 text-center">Milestones achieved during the period</h3>
        <hr />
        @if (ViewBag.Grid1 != null)
        {
            <table id="CasesTable1" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Sr.No.</th>
                        <th>Stage Description</th>
                        <th>Service Lead Service</th>
                        <th>Item Description</th>
                        <th>Date of Accord of AoN</th>
                        <th>Cost (in Rs. Crs)</th>
                        <th>Categorisation</th>
                        <th>IC_percentage</th>
                        <th>Trials_Required</th>
                    </tr>
               </thead>

                <tbody>
                    @foreach (var item in ViewBag.Grid1)
                    {
                        <tr>
                        <td>@item.Pkey</td>
                        <td>@item.TaskDescription</td>
                        <td>@item.Service_Lead_Service</td>
                        <td>@item.item_description</td>
                        <td>@item.Date_of_Accord_of_AoN.ToString("dd-MMM-yyyy")</td>
                        <td>@item.Cost</td>
                        <td>@item.Categorisation</td>
                        <td>@item.IC_percentage</td>
                        <td>@item.Trials_Required</td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

