
@{
    ViewBag.Title = "ReportOnClick";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style type="text/css">
        .Table {
            display: table;
        }

        .Title {
            display: table-caption;
            text-align: center;
            font-weight: bold;
            font-size: larger;
        }

        .Heading {
            display: table-row;
            font-weight: bold;
            text-align: center;
        }

        .Row {
            display: table-row;
        }

        .Cell {
            display: table-cell;
            border: solid;
            border-width: thin;
            padding-left: 5px;
            padding-right: 5px;
        }
    </style>
    <style>
        .danger {
            color: red;
        }

        .labeltext {
            font-family: Georgia, 'Times New Roman', Times, serif
        }

        .labeltext {
            font-family: Georgia, 'Times New Roman', Times, serif
        }

        .labeltext {
            font-family: Georgia, 'Times New Roman', Times, serif
        }

        .form-inline {
            display: block;
            width: 100%
        }

        .dataTables_length {
            float: left;
        }

        .dataTables_filter {
            float: right;
        }

        .border-right {
            border-right: 1px solid #dee2e6 !important;
            font-size: 16px;
        }

        @@font-face {
            font-family: 'Glyphicons Halflings';
            src: url('../fonts/glyphicons-halflings-regular.eot');
            src: url('../fonts/glyphicons-halflings-regular.eot?#iefix') format('embedded-opentype'), url('../fonts/glyphicons-halflings-regular.woff') format('woff'), url('../fonts/glyphicons-halflings-regular.ttf') format('truetype'), url('../fonts/glyphicons-halflings-regular.svg#glyphicons-halflingsregular') format('svg');
        }

        /*sidebar css statrt*/
        #sidebar-wrapper .list-group {
            width: auto;
        }

        #sidebar-wrapper .sidebar-heading {
            padding: 0.875rem 1.25rem;
            font-size: 1.2rem;
        }

        #sidebar-wrapper {
            width: 284px;
        }

            #sidebar-wrapper .sidebar-heading {
                padding: 1.875rem 1.25rem;
                font-size: 2rem;
            }
    </style>
    @*Prevent Right Click Script*@
    <script>
        document.addEventListener('contextmenu', event => event.preventDefault());
    </script>
</head>
<div class="row">
    <div class="col-md-12">
        <h3 class="well text-capitalize p-3 text-center">Stage wise cycle time analysis</h3>
        <hr />
        @if (ViewBag.Grid1 != null)
        {
            <table id="CasesTable1" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Sr.No.</th>
                        <th>Description</th>
                        <th>Service Lead</th>
                        <th>Categorisation</th>
                        <th>Stage Name</th>
                        <th>No of Weeks</th>
                        
                    </tr>
                </thead>

                <tbody>
                    @{int count = 1;}
                    @foreach (var item in ViewBag.Grid1)
                    {
                        <tr>
                            <td>@count</td>
                            <td>
                                <a href="/WReports/NewReports?id=@item.aon_id">
                                    <span> @item.item_description</span>
                                </a>
                           </td>
                            <td>@item.Service_Lead_Service</td>
                            <td>@item.Categorisation</td>
                            <td>@item.stage_name</td>
                            <td>@item.no_of_weeks</td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        }
    </div>
</div>

