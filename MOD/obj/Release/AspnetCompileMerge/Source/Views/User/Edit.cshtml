@model MOD.Models.UserSaveViewModel
@{
    ViewBag.Title = "Edit";
}
<style>
    form{
            width: 100%;
    padding: 0px 10px;
    }
</style>

    <div class="card flex-fill w-100 p-4">
        <div class="row mb-2 mb-xl-3">
            <div class="col-auto d-none d-sm-block">
                <h2 class="mb-0">Edit User</h2>
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("Update", "User", FormMethod.Post))
            {
                <div class="form-row mb-4">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <div class="col">
                        <!-- First name -->
                        <label class="labeltext font-weight-bold">User Name<span class="danger">*</span>:</label>
                        <input type="text" id="defaultRegisterFormFirstName" value="@Model.UserName" name="UserName" class="form-control" placeholder="User Name">
                    </div>
                    <div class="col">
                        <!-- Last name -->
                        <label class="labeltext font-weight-bold">User Email<span class="danger">*</span>:</label>
                        <input type="text" id="defaultRegisterFormLastName" value="@Model.InternalEmailID" name="InternalEmailID" class="form-control" placeholder="User Email">
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">

                        <label class="labeltext font-weight-bold">External Email<span class="danger">*</span>:</label>
                        <input type="text" name="ExternalEmailID" value="@Model.ExternalEmailID" class="form-control" placeholder="External Email">
                    </div>
                    <div class="col">

                        <label class="labeltext font-weight-bold">Password<span class="danger">*</span>:</label>
                        <input type="password" name="Password" value="@Model.Password" readonly="readonly" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">
                        <!-- First name -->
                        <label class="labeltext font-weight-bold">Phone<span class="danger">*</span>:</label>
                        <input type="text" id="defaultRegisterFormFirstName" value="@Model.Phone" name="Phone" class="form-control" placeholder="Phone">
                    </div>
                    <div class="col">
                        <!-- Last name -->
                        <label class="labeltext font-weight-bold">Department<span class="danger">*</span>:</label>
                        <select class="form-control" name="DepartmentID">
                            <option value="0">-Select Department-</option>
                            @foreach (var item in Model.departmentList)
                            {
                                <option value="@item.deptt_id" @(item.deptt_id == Model.DepartmentID ? "selected" : string.Empty)>@item.deptt_description</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">
                        <label class="labeltext font-weight-bold">Valid From<span class="danger">*</span>:</label>
                        @*@{
                        string y = "", m = "", d = "";
                        string[] date = Model.ValidFrom.Value.ToShortDateString().Split('/');
                        y = date[2];
                        m = date[0];
                        d = date[1];
                        if (Convert.ToInt32(m) < 10)
                        {
                            m = "0" + m;
                        }
                        if (Convert.ToInt32(d) < 10)
                        {
                            d = "0" + d;
                        }
                    }*@
                        <input type="date" id="defaultRegisterFormFirstName" value="@Model.ValidFrom.Value.ToString("yyyy-MM-dd")" name="ValidFrom" class="form-control" placeholder="Valid From">
                    </div>
                    <div class="col">
                        <label class="labeltext font-weight-bold">Valid Till<span class="danger">*</span>:</label>
                        @*@{
                        string yy = "", mm = "", dd = "";
                        string[] date1 = Model.ValidTill.Value.ToShortDateString().Split('/');
                        yy = date1[2];
                        mm = date1[0];
                        dd = date1[1];
                        if (Convert.ToInt32(mm) < 10)
                        {
                            mm = "0" + mm;
                        }
                        //if (Convert.ToInt32(dd) < 10)
                        //{
                        //    dd = "0" + dd;
                        //}
                    }*@
                        <input type="date" id="defaultRegisterFormLastName" value="@Model.ValidTill.Value.ToString("yyyy-MM-dd")" name="ValidTill" class="form-control" placeholder="Valid Till">
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">
                        <!-- First name -->
                        <label class="labeltext font-weight-bold">Designation<span class="danger">*</span>:</label>
                        <input type="text" id="defaultRegisterFormFirstName" value="@Model.Designation" name="Designation" class="form-control" placeholder="Designation">
                    </div>
                    <div class="col">
                        <label class="labeltext font-weight-bold">Section<span class="danger">*</span>:</label>
                        <select class="form-control" name="UserTypeId">
                            <option value="0">-Select UserType-</option>
                            @foreach (var item in Model.SectionMasterList)
                            {
                                <option value="@item.section_id" @(item.section_id == Model.SectionID ? "selected" : string.Empty)>@item.section_descr</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">
                        <!-- First name -->
                        <label class="labeltext font-weight-bold">IP Address<span class="danger">*</span>:</label>
                        <input type="text" id="defaultRegisterFormFirstName" name="IPAddress" value="@Model.IPAddress" class="form-control" placeholder="IP Address">
                    </div>
                    <div class="col">
                        <!-- First name -->
                        <label class="labeltext font-weight-bold">Rank User<span class="danger">*</span>:</label>
                        <input type="text" id="defaultRegisterFormFirstName" name="RankUser" value="@Model.RankUser" class="form-control" placeholder="RankUser">
                    </div>
                </div>
                <div class="form-row mb-4">
                    <div class="col">
                        <!-- First name -->
                        <label class="labeltext labeltext font-weight-bold">Login Allowed<span class="danger">*</span>:</label>
                        @Html.DropDownListFor(model => model.LoginAllowed, new List<SelectListItem>
                           {
                            new SelectListItem{ Text="Y", Value = "Y" },
                            new SelectListItem{ Text="N", Value = "N" },
                           }, "-Select Services-", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.LoginAllowed, null, new { @class = "danger" })
                    </div>
                    <div class="col">
                        <label class="labeltext font-weight-bold">Mac Address<span class="danger">*</span>:</label>
                        <input type="text" id="defaultRegisterFormFirstName" name="MacAddress" value="@Model.MacAddress" class="form-control" placeholder="MacAddress">
                    </div>
                </div>
                <!-- Sign up button -->
                <button class="btn btn-primary float-right" type="submit">Update User</button>
            }
        </div>
    </div>






