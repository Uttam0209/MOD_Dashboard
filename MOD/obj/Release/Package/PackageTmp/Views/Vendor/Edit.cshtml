@model MOD.Models.VendorSaveViewModel
@{
    ViewBag.Title = "Edit";
}

    <div class="card flex-fill w-100 p-4">
        <div class="row mb-2 mb-xl-3">
            <div class="col-auto d-none d-sm-block">
                <h2 class="mb-0">Edit Vendor</h2>
            </div>
        </div>

        @using (Html.BeginForm("Update", "Vendor", FormMethod.Post))
        {
            <div class="form-row mb-4">
                <input type="hidden" name="VendorId" value="@Model.VendorId" />
                <div class="col">
                    <label class="labeltext font-weight-bold">Vendor Category<span class="danger">*</span>:</label>
                    <select class="form-control" name="VendorCategory">
                        <option value="0">-Select Vendor Category-</option>
                        @foreach (var vCategory in Model.VendorCategories)
                        {
                            <option value="@vCategory.VendorCategoryID" @(vCategory.VendorCategoryID == Model.VendorCategory ? "selected" : string.Empty)>@vCategory.VendorCategoryName</option>
                        }
                    </select>
                </div>
                <div class="col">
                    <!-- First name -->
                    <label class="labeltext font-weight-bold">Vendor Name<span class="danger">*</span>:</label>
                    <input type="text" id="defaultRegisterFormFirstName" value="@Model.VendorName" name="VendorName" class="form-control" placeholder="Vendor Name">
                </div>
            </div>
            <div class="form-row mb-4">
                <div class="col">
                    <!-- Last name -->
                    <label class="labeltext font-weight-bold">Vendor Address:</label>
                    <input type="text" id="defaultRegisterFormLastName" value="@Model.VendorAddress" name="VendorAddress" class="form-control" placeholder="Vendor Address">
                </div>
                <div class="col">
                    <!-- First name -->
                    <label class="labeltext font-weight-bold">Vendor ContactName:</label>
                    <input type="text" id="defaultRegisterFormFirstName" value="@Model.VendorContactName" name="VendorContactName" class="form-control" placeholder="Vendor ContactName">
                </div>

            </div>
            <div class="form-row mb-4">
                <div class="col">
                    <!-- Last name -->
                    <label class="labeltext font-weight-bold">Vendor Phone:</label>
                    <input type="text" id="defaultRegisterFormLastName" value="@Model.VendorPhone" name="VendorPhone" class="form-control" placeholder="Vendor Phone">
                </div>
                <div class="col">
                    <!-- First name -->
                    <label class="labeltext font-weight-bold">Vendor Email<span class="danger">*</span>:</label>
                    <input type="text" id="defaultRegisterFormFirstName" value="@Model.VendorEmail" name="VendorEmail" class="form-control" placeholder="Vendor Email">
                </div>
            </div>
            <!-- Sign up button -->
            <button class="btn btn-info float-right" type="submit">Update Vendor</button>
        }

    </div>



