@model MOD.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

<div class="well changePasForm">
    <h3 class="text-center changepassHead">Change Password  </h3>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-12 control-label" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.OldPassword, null, new { @class = "danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-12 control-label" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="  col-md-10">
            <input type="submit" value="Change password" class="btn btn-primary" />
            <div class="danger">
                @TempData["ChangePassword"]
            </div> 
        </div>
    </div>
</div>

    <style>
        .changePasForm {
            background: #efefef;
            margin: 74px;
            padding: 31px;
            margin: 0 auto;
            width: 40%;
            margin-top: 58px;
            box-shadow: 0 3px 4px 4px rgba(0, 0, 0, 0.1);
            -moz-box-shadow: 0 3px 20px 0px rgba(0, 0, 0, 0.1);
        }
        .changepassHead {
            text-transform: uppercase;
            font-size: 23px;
        }

        .danger {
            color: red;
        }
        
    </style>
}

