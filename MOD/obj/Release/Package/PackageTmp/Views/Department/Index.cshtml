
@model MOD.Models.DepartmentListViewModel
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col col-lg-12">
        <h2 class="text-center p-2">Department List</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col col-lg-12 p-2">
        <a href="@Url.Action("Create","Department")" class="btn btn-primary float-right" type="button"><i class="fas fa-plus-square mr-1"></i>Create</a>
    </div>
</div>
@if (Model != null && Model.Departments.Count() > 0)
{
    <div class="row">
        <div class="col col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">SL. No.</th>
                        <th scope="col">Department Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int count = 1;}
                    @foreach (var depart in Model.Departments)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@depart.DepartmentName</td>
                            <td>@depart.Location</td>
                           
                            <td>
                                <a href="@Url.Action("Edit","Department", new {ID = depart.DeptId })" type="submit" class="btn-data btn btn-success"><i class="fas fa-edit mr-1"></i>Edit</a>

                                <a href="@Url.Action("Delete","Department", new {ID = depart.DeptId })" onclick="return confirm('Are you sure you want to delete?')" type="submit" class="btn-data btn btn-danger"><i class="fas fa-trash mr-1"></i>Delete</a>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        Records Not Found.
    </div>
}






